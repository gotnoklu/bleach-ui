{
  "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "maxSize": 2097152,
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!!**/out",
      "!!**/build",
      "!!**/dist",
      "!!**/.github",
      "!!**/.vscode",
      "!!**/.yarn",
      "!!**/.turbo",
      "!!**/node_modules/",
      "!!**/tests/**/*.js"
    ]
  },
  "formatter": {
    "enabled": true,
    "useEditorconfig": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 120,
    "attributePosition": "auto",
    "bracketSpacing": true,
    "includes": ["**", "!!**/out", "!!**/.github", "!!**/.vscode", "!!**/.yarn", "!!**/.turbo", "!!**/node_modules/"]
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "linter": {
    "enabled": true,
    "includes": [
      "**",
      "!!**/out",
      "!!**/build",
      "!!**/dist",
      "!!**/.next",
      "!!**/.github",
      "!!**/.vscode",
      "!!**/.yarn",
      "!!**/.turbo",
      "!!**/node_modules/"
    ],
    "rules": {
      "recommended": true,
      "a11y": {
        "useValidAnchor": "off",
        "noSvgWithoutTitle": "off"
      },
      "complexity": {
        "noUselessTypeConstraint": "error",
        "noBannedTypes": "off",
        "useLiteralKeys": "off",
        "noForEach": "off",
        "useArrowFunction": "off"
      },
      "correctness": {
        "noInvalidUseBeforeDeclaration": "off",
        "noPrecisionLoss": "error",
        "noUnusedVariables": { "level": "error", "options": { "ignoreRestSiblings": true } },
        "useExhaustiveDependencies": "off"
      },
      "security": {
        "noBlankTarget": "error",
        "noDangerouslySetInnerHtmlWithChildren": "error"
      },
      "style": {
        "useNodejsImportProtocol": "off",
        "noNamespace": "off",
        "noParameterAssign": "off",
        "useAsConstAssertion": "error",
        "useBlockStatements": "off",
        "useArrayLiterals": "off",
        "noUnusedTemplateLiteral": {
          "options": {},
          "level": "warn",
          "fix": "safe"
        },
        "noNonNullAssertion": "off"
      },
      "suspicious": {
        "noCommentText": "error",
        "noEmptyBlockStatements": "off",
        "noExtraNonNullAssertion": "error",
        "noMisleadingInstantiator": "error",
        "noUnsafeDeclarationMerging": "error",
        "noImplicitAnyLet": "off",
        "noExplicitAny": "off",
        "noTsIgnore": "off",
        "noAssignInExpressions": "off"
      }
    }
  },
  "overrides": [
    {
      "includes": ["**/*.ts", "**/*.tsx", "**/*.mts", "**/*.cts", "**/*.jsx", "**/*.js"],
      "linter": {
        "enabled": true,
        "rules": {
          "correctness": {
            "noConstAssign": "off",
            "noGlobalObjectCalls": "off",
            "noInvalidBuiltinInstantiation": "off",
            "noInvalidConstructorSuper": "off",
            "noSetterReturn": "off",
            "noUndeclaredVariables": "off",
            "noUnreachable": "off",
            "noUnreachableSuper": "off",
            "noUnusedImports": {
              "options": {},
              "level": "error",
              "fix": "unsafe"
            },
            "noUnusedFunctionParameters": {
              "options": { "ignoreRestSiblings": true },
              "fix": "safe",
              "level": "warn"
            },
            "noUnusedVariables": {
              "options": {
                "ignoreRestSiblings": true
              },
              "level": "error",
              "fix": "safe"
            },
            "noUnusedPrivateClassMembers": "off"
          },
          "complexity": {
            "noArguments": "error",
            "noUselessUndefinedInitialization": "off",
            "useIndexOf": "off"
          },
          "style": {
            "useConst": "error",
            "noUnusedTemplateLiteral": {
              "options": {},
              "level": "warn",
              "fix": "safe"
            },
            "noNonNullAssertion": "off"
          },
          "suspicious": {
            "noVar": "error",
            "useIterableCallbackReturn": "off",
            "noNonNullAssertedOptionalChain": "off",
            "noDuplicateClassMembers": "off",
            "noDuplicateObjectKeys": "off",
            "noDuplicateParameters": "off",
            "noFunctionAssign": "off",
            "noImportAssign": "off",
            "noRedeclare": "off",
            "noUnsafeNegation": "off",
            "useGetterReturn": "off",
            "noExplicitAny": "off",
            "noTsIgnore": "off",
            "noTemplateCurlyInString": "off"
          }
        }
      }
    }
  ],
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "trailingCommas": "es5",
      "semicolons": "asNeeded",
      "arrowParentheses": "always",
      "bracketSameLine": false,
      "quoteStyle": "single",
      "attributePosition": "auto",
      "bracketSpacing": true
    }
  }
}
