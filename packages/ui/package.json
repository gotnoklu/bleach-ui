{
  "name": "@bleach/ui",
  "description": "The stylish UI library for React Native",
  "version": "0.0.1",
  "repository": "https://github.com/delalify/conjoin-monorepo",
  "author": "Enoch Klu <cyronix787@gmail.com>",
  "contributors": [
    {
      "name": "Delali Azumah",
      "url": "https://github.com/assetcorp"
    }
  ],
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "packageManager": "yarn@4.6.0",
  "scripts": {
    "watch": "yarn build && chokidar \"./**/*.{ts,tsx,swcrc,json}\" -i \"./dist/**/*.{ts,json}\" -c \"yarn build\"",
    "build": "yarn lint && rslib build && tsc --declaration --emitDeclarationOnly",
    "lint": "cd ../../ && yarn lint packages/ui && cd packages/ui && tsc --noEmit --skipLibCheck",
    "lint:fix": "cd ../../ && yarn lint --fix",
    "format": "cd ../../ && yarn format --write",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@rsbuild/plugin-react": "^1.4.2",
    "@rslib/core": "^0.18.3",
    "@types/react": "^18",
    "chokidar-cli": "^3.0.0",
    "react": "^18",
    "react-native": "^0.76.6",
    "react-native-reanimated": "^3.16.7",
    "typescript": "^5.7.3"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-reanimated": "*"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "exports": {
    ".": "./dist/index.js",
    "./components/*": "./dist/components/*.js",
    "./theme/*": "./dist/theme/*.js",
    "./package.json": "./package.json"
  },
  "dependencies": {
    "@tabler/icons-react-native": "^3.35.0"
  }
}
