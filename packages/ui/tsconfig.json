{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "esnext",
    "declaration": true,
    "outDir": "dist",
    "moduleDetection": "auto",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
